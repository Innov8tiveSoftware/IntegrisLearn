@{
    ViewBag.SelectedMenu = "getStarted";
    ViewBag.title = "Get Started";
}

<!--copy -->
<div class="content-block">
    <div class="row">
        <div class="col-sm-16 col-xs-22 col-sm-offset-4 col-xs-offset-1">
            <h1 class="green text-center">Let’s set up your account</h1>
            <p class="text-center">
                Signing up for INTEGRIS & Me is fast and easy. Before you know it, you’ll have access to a suite of powerful tools to manage your health and your health care.
            </p>
        </div>
    </div>
</div>
<div class="content-block n-p">
    <div class="row">
        <div class="col-sm-24 text-center n-p">
            <h2>3 Simple Steps</h2>
        </div>
    </div>
</div>
<!--checkboxes -->
<div class="content-block">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-2 col-xs-22 col-xs-offset-1 text-center">
            <div class="checkmark"><img src="/images/1.png" class="checkmark-img" alt="Call" /></div>
            <div class="checkmark-copy">@*<h3>1.Call</h3>*@</div>
            <p>
                When you check out from your physician’s office, your patient visit summary will contain a 15-character activation code. You can also find it on your billing statement. If you’re having trouble finding your code or need to request one, call 1-844-843-1500 or your physician’s office.
            </p>

        </div>
        <div class="col-sm-6 col-sm-offset-1 col-xs-22 col-xs-offset-1 text-center cta-large-mobile">
            <div class="checkmark"><img src="~/images/2.png" class="checkmark-img" alt="Register" /></div>
            <div class="checkmark-copy">@*<h3>2.Register</h3>*@</div>
            <p>
                Create an account at <a href="https://www.integrisandme.com/">integrisandme.com</a> and enter your activation code to link to your information.
            </p>
        </div>
        <div class="col-sm-6 col-sm-offset-1 col-xs-22 col-xs-offset-1 text-center cta-large-mobile">
            <div class="checkmark"><img src="~/images/3.png" class="checkmark-img" alt="Manage" /></div>
            <div class="checkmark-copy">@*<h3>3.Manage</h3>*@</div>
            <p>
                Start exploring the new tools available to you!<br/>
                <a href="https://integrisandme.com" class="btn btn-primary feature-link m-t-20" target="_blank">Get Started</a>
            </p>
        </div>
    </div>
</div>

<!-- video -->
<div class="content-block n-p">
    <div class="row">
        <div class="col-xs-20 col-xs-offset-2 col-sm-20 col-sm-offset-2 col-md-15 col-md-offset-4 feature-box-center video-parent features">
            @Html.Partial("~/Views/Shared/_GetStartedVideoPlayer.cshtml")
        </div>
    </div>
</div>

